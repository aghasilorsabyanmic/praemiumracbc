<Window x:Class="Exchange.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exchange.Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <ComboBox Height="40" Width="100" Name="Combo" Grid.Row="0" HorizontalAlignment="Left" />
        <Button Height="40" Width="100" Content="Refresh" HorizontalAlignment="Right" Grid.Row="0" Name="ButtonRefresh"/>
        <StatusBar HorizontalAlignment="Stretch" Height="30" Grid.Row="2">
            <Label x:Name="label" Content=""/>
        </StatusBar>
        <ListView x:Name="listView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Grid.Row="1" >
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
